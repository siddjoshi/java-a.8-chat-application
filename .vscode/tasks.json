{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run Anonymous Chat App",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"compile",
				"spring-boot:run"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$maven"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}